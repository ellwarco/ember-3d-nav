{{#nav-trigger-container navIsVisible=navIsVisible toggleMenu='toggleMenu'}}
  <a href="#0" class="cd-logo"><img src="img/ShipShapeIcon.svg" alt="Logo"></a>
{{/nav-trigger-container}}

<main>
  {{yield}}
</main>

<nav class="cd-3d-nav-container {{if navIsVisible 'nav-is-visible'}}">
  <ul class="cd-3d-nav">
    {{#each links as |link|}}
      {{nav-item
      cdSelected=link.selected
      href=link.href
      onClickAction='onClickAction'
      text=link.text}}
    {{/each}}
  </ul> <!-- .cd-3d-nav -->

  {{nav-marker multiColor=multiColor}}
</nav> <!-- .cd-3d-nav-container -->